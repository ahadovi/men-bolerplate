{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["es5"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src", "**/*.ts"
  ],
  "exclude": ["node_modules"],
}